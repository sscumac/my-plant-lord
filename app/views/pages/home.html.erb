
<div class="banner d-flex align-items-center" style="background-image: url(https://images.unsplash.com/photo-1457282168619-2383c79b278d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1508&q=80);">
  
  <div class="container">

    <h1><strong>Add some green to your space</strong></h1>
    <h3>Search something you will love</h3>
    <div class="btn-padding">
      <%= link_to "Explore our plants", plants_path, class:"btn-main" %>
    </div>
  </div>
</div>

<div class= "container">


  <h3 class="my-3"> Top plants </h3>

   <div class="row">
      <% @plants.each do |plant| %>
        <div class="col-4">
          <%= link_to plant_path(plant), class: "plant-card-link" do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path plant.photo.key, crop: :fit %>)">
              <%= plant.name.capitalize %>
              <h2 class="card-plant-pricing"><%= number_to_currency(plant.price, precision: 0) %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

</div>

