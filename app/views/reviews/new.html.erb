<div class="container mt-4 col-6">
  <h2>Leave a Review</h2>
  <div class="row">
    <div class="col-6">
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content%>
        <%= f.submit "Submit me",  class:"btn-main" %>
      <% end %>
    </div>
    <div class="col-6">
      <%# <img src="https://cdn.shopify.com/s/files/1/0013/3529/6118/products/Wythe-40-2970.040-WH_Bird-of-Paradise-14.jpg?v=1604354745" width="350" height="250"> %>
      <%= cl_image_tag @booking.plant.photo.key, width: 462, height: 400, crop: :fill, class: "w-100 h-100" %>
    </div>
  </div>

</div>
