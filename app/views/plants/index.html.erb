<div id="map"
    style="width: 100%; height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

<div class= "container">
  <div class="index-header">
    <h3 class="my-3"> There's a lot to discover here </h3>
  </div>

  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-4">
        <%= link_to plant_path(plant), class: "plant-card-link" do %>
          <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path plant.photo.key, crop: :fit %>)">
            <%= plant.name.capitalize %>
            <h2 class="card-plant-pricing"><%= number_to_currency(plant.price, precision: 0) %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>








</div>
